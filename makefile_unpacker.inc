$(OBJDIR)/%.o: $(1)/%.cc $(OBJDIR)/%.d
	@echo "   CXX   $$@"
	$(QUIET)$$(CXX) -I. -I$$(UCESB_BASE_DIR)/eventloop -I$(1) $(2) \
	  $$(call FILTER_WARNINGS,$$@,$$(CXXFLAGS)) $$(OPTFLAGS) -o $$@ -c $$<

