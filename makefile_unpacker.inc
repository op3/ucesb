	@echo "  DEPS   $$@"
	$(QUIET)$$(CXX) -I. -I$$(UCESB_BASE_DIR)/eventloop -I$(1) $(2) \
	    $$(call FILTER_WARNINGS,$$@,$$(CXXFLAGS)) -MM -MG $$< -DDEPSRUN | \
	  sed -e 's,\($$(*F)\)\.o[ :]*,$$*.o $$@ : ,g' \
	      -e 's,gen/gen,gen,g' -e 's, gen/, $$(GENDIR)/,g' \
	> $$@
endef

