define COMPILE_FROM_DIR_template
#$$(info Arg1 $(1))
#$$(info Arg2 $(2))
#$$(info ucesb_base_dir $$(UCESB_BASE_DIR))
#$$(info cxx $$(CXX))
#$$(info cxxflags $$(CXXFLAGS))
